                    TitleColor="Black"
                    BackgroundColor="#16B4C8"
                    FontFamily="Micro"
                    FontSize="Medium"
                    ItemsSource="{Binding rep8}"
                    ItemDisplayBinding="{Binding Rep}"
                    SelectedItem="{Binding SelectedRep8}"/>
                    

                </StackLayout>

                <StackLayout Padding="10">
                    <Label Text="10-Eprouvez vous de la Fatigue ?"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       VerticalOptions="Center" />


                    <Picker Title="sélect à réponse"
                    
                            
                    TextColor="Black"
                    TitleColor="Black"
                    BackgroundColor="#16B4C8"
                    FontFamily="Micro"
                    FontSize="Medium"
                    ItemsSource="{Binding rep9}"
                    ItemDisplayBinding="{Binding Rep}"
                    SelectedItem="{Binding SelectedRep9}"/>

                    
                </StackLayout>

                <StackLayout  Padding="10" Orientation="Horizontal" HorizontalOptions="Center">
                    <StackLayout Padding="10" Orientation="Horizontal" HorizontalOptions="Center">
                        <Button Command="{Binding PostCommand}" Text="Submit" BackgroundColor="#16B4C8"  />

                    </StackLayout>
                    <StackLayout  Padding="10" Orientation="Horizontal" HorizontalOptions="Center">
                        <Button Clicked="Button_Clicked" Text="See your result" BackgroundColor="#16B4C8" />
                    </StackLayout>
                </StackLayout>
                
               
                <StackLayout Padding="30,30,30,30" >
                    <Label x:Name="StatusR"  FontSize="Large" HorizontalOptions="Center" HorizontalTextAlignment="Center" BackgroundColor="WhiteSmoke"   />
                </StackLayout>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>

</ContentPage>